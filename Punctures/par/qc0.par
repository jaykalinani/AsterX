ActiveThorns = "
    ADMBase
    CarpetX
    ErrorEstimator
    Formaline
    IOUtil
    Punctures
"

Cactus::cctk_show_schedule = no

Cactus::presync_mode = "mixed-error"

CarpetX::verbose = no
